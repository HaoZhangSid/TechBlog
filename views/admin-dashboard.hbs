{{!-- 移除旧的header引用, 统一header已经在layouts/admin.hbs中引入 --}}

<main id="main-content" class="min-h-screen bg-background text-textColor pb-12" tabindex="-1">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header section -->
    <header class="mb-8" role="banner">
      <h1 class="text-3xl font-bold text-textColor">Admin Dashboard</h1>
      <p class="text-textSecondary mt-2">Welcome back, {{user.name}}! Manage your blog content here.</p> {{!-- Display user name --}}
    </header>

    <!-- Dashboard Stats -->
    <section aria-labelledby="dashboard-stats-heading" class="mb-12 grid grid-cols-1 md:grid-cols-2 gap-6">
      <h2 id="dashboard-stats-heading" class="sr-only">Dashboard Statistics</h2>
      
      <div class="bg-cardBackground rounded-lg border border-borderColor p-6" role="region" aria-labelledby="content-overview-heading">
        <div class="flex items-center justify-between mb-4">
          <h3 id="content-overview-heading" class="text-xl font-semibold text-textColor">Content Overview</h3>
          <span class="text-accent" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </span>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div class="bg-background rounded-md p-4 border border-borderColor">
            <div class="text-3xl font-bold text-textColor mb-1">{{postCount}}</div>
            <div class="text-textSecondary text-sm">Total Posts</div>
          </div>
          
          <div class="bg-background rounded-md p-4 border border-borderColor">
            <div class="text-3xl font-bold text-textColor mb-1">{{commentCount}}</div>
            <div class="text-textSecondary text-sm">Total Comments</div>
          </div>
        </div>
      </div>
      
      <div class="bg-cardBackground rounded-lg border border-borderColor p-6" role="region" aria-labelledby="quick-actions-heading">
        <div class="flex items-center justify-between mb-4">
          <h3 id="quick-actions-heading" class="text-xl font-semibold text-textColor">Quick Actions</h3>
          <span class="text-accent" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </span>
        </div>
        
        <div class="grid grid-cols-1 gap-4">
          <a href="/admin/posts/create" 
             class="flex items-center p-4 bg-primary hover:bg-accent text-white rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-cardBackground focus:ring-accent min-h-[44px]"
             aria-label="Write new post">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            <span class="text-white font-medium">Write New Post</span>
          </a>
          
          <a href="/admin/posts" 
             class="flex items-center p-4 bg-background hover:bg-borderColor rounded-md border border-borderColor transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-cardBackground focus:ring-accent min-h-[44px]"
             aria-label="Manage all posts">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-textColor" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <span class="text-textColor">Manage All Posts</span>
          </a>
        </div>
      </div>
    </section>
    
    <!-- Recent Activity -->
    <section aria-labelledby="recent-activity-heading" class="bg-cardBackground rounded-lg border border-borderColor overflow-hidden" role="region">
      <div class="p-6 border-b border-borderColor">
        <h2 id="recent-activity-heading" class="text-xl font-semibold text-textColor">Recent Activity</h2>
      </div>
      
      <ul class="divide-y divide-borderColor" role="list">
        <!-- Sample Activity items -->
        <li class="p-4 flex items-start">
          <div class="bg-primary rounded-full p-2 mr-4 flex-shrink-0 flex items-center justify-center min-w-[40px] min-h-[40px]" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
          <div>
            <div class="text-textColor font-medium">New post published</div>
            <div class="text-textSecondary text-sm">"Getting Started with Express and Handlebars" was published.</div>
            <time datetime="2023-06-15" class="text-textSecondary/80 text-xs mt-1">2 days ago</time>
          </div>
        </li>
        
        <li class="p-4 flex items-start">
          <div class="bg-purple-500 dark:bg-purple-600 rounded-full p-2 mr-4 flex-shrink-0 flex items-center justify-center min-w-[40px] min-h-[40px]" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
          </div>
          <div>
            <div class="text-textColor font-medium">New comment received</div>
            <div class="text-textSecondary text-sm">Sarah Johnson commented on "Getting Started with Express and Handlebars"</div>
            <time datetime="2023-06-14" class="text-textSecondary/80 text-xs mt-1">3 days ago</time>
          </div>
        </li>
        
        <li class="p-4 flex items-start">
          <div class="bg-green-500 dark:bg-green-600 rounded-full p-2 mr-4 flex-shrink-0 flex items-center justify-center min-w-[40px] min-h-[40px]" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <div>
            <div class="text-textColor font-medium">Draft post created</div>
            <div class="text-textSecondary text-sm">"Dark Mode in Modern Web Design" was created as a draft.</div>
            <time datetime="2023-06-10" class="text-textSecondary/80 text-xs mt-1">1 week ago</time>
          </div>
        </li>
      </ul>
    </section>
  </div>
</main> 