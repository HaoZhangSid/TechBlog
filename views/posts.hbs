{{> header}}
<main class="container mx-auto p-6 bg-gray-900 dark:bg-gray-800 min-h-screen">
  <h1 class="text-3xl font-bold text-gray-100 dark:text-white mb-6">Manage Posts</h1>

  <!-- Flash Messages -->
  {{#if success_msg}}
    <div class="bg-green-100 text-green-700 p-4 mb-6 rounded" role="alert" aria-live="polite">
      {{success_msg}}
    </div>
  {{/if}}
  {{#if error_msg}}
    <div class="bg-red-100 text-red-700 p-4 mb-6 rounded" role="alert" aria-live="polite">
      {{error_msg}}
    </div>
  {{/if}}

  <!-- Post List -->
  <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden">
    <table class="w-full table-auto">
      <thead>
        <tr class="bg-gray-200 dark:bg-gray-700">
          <th class="px-4 py-2 text-left text-gray-900 dark:text-white">Title</th>
          <th class="px-4 py-2 text-left text-gray-900 dark:text-white">Author</th>
          <th class="px-4 py-2 text-left text-gray-900 dark:text-white">Published</th>
          <th class="px-4 py-2 text-left text-gray-900 dark:text-white">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each posts}}
          <tr class="border-b dark:border-gray-700">
            <td class="px-4 py-2 text-gray-900 dark:text-white">{{this.title}}</td>
            <td class="px-4 py-2 text-gray-900 dark:text-white">{{this.author.name}}</td>
            <td class="px-4 py-2 text-gray-900 dark:text-white">{{#if this.published}}Yes{{else}}No{{/if}}</td>
            <td class="px-4 py-2">
              <a href="/admin/posts/edit/{{this._id}}" class="text-blue-500 hover:underline mr-4" aria-label="Edit post: {{this.title}}">Edit</a>
              <form action="/admin/posts/delete/{{this._id}}" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                <button type="submit" class="text-red-500 hover:underline" aria-label="Delete post: {{this.title}}">Delete</button>
              </form>
            </td>
          </tr>
        {{else}}
          <tr>
            <td colspan="4" class="px-4 py-2 text-center text-gray-900 dark:text-white">No posts found.</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Create Post Button -->
  <div class="mt-6">
    <a href="/admin/posts/create" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" aria-label="Create a new post">Create New Post</a>
  </div>
</main>