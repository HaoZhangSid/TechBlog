<!-- Script for mobile menu toggle and user dropdown -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const mobileMenuButton = document.querySelector('[aria-controls="mobile-menu"]');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
        mobileMenu.classList.toggle('hidden');
        
        // Toggle the menu icons
        const openIcon = this.querySelector('svg.block');
        const closeIcon = this.querySelector('svg.hidden');
        if (openIcon && closeIcon) {
          openIcon.classList.toggle('block');
          openIcon.classList.toggle('hidden');
          closeIcon.classList.toggle('block');
          closeIcon.classList.toggle('hidden');
        }
      });
    }

    // User dropdown menu
    const userMenuButton = document.getElementById('user-menu-button');
    const userDropdownMenu = document.getElementById('user-dropdown-menu');
    const userMenu = document.getElementById('user-menu');
    
    if (userMenuButton && userDropdownMenu && userMenu) { // Check userMenu exists
      let isOpen = false;
      
      userMenuButton.addEventListener('click', function(event) {
        event.stopPropagation(); // Prevent click from bubbling to document
        isOpen = !isOpen;
        if (isOpen) {
          userDropdownMenu.classList.remove('hidden');
          this.setAttribute('aria-expanded', 'true');
        } else {
          userDropdownMenu.classList.add('hidden');
          this.setAttribute('aria-expanded', 'false');
        }
      });
      
      // Close dropdown menu when clicking outside
      document.addEventListener('click', function(event) {
        if (isOpen && userMenu && !userMenu.contains(event.target)) { // Check userMenu exists
          userDropdownMenu.classList.add('hidden');
          userMenuButton.setAttribute('aria-expanded', 'false');
          isOpen = false;
        }
      });
    }
  });
</script>
