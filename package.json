{
  "name": "tech-blog-slow-start",
  "version": "0.1.0",
  "description": "Tech blog initial setup",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run watch:css\" \"nodemon server.js\"",
